    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (type in script name)",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "args": []
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "/workspaces/.venv/bin/python3",
            "cwd": "${workspaceFolder}/cwd",
            "env": {
                "PYTHONPATH": "${env:PYTHONPATH}:/workspaces/nanoGPT"
            }
        }
    ]
}